{
  "name": "app",
  "private": "true",
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "daisyui": "^2.46.0",
    "esbuild": "^0.16.12",
    "postcss": "^8.4.20",
    "tailwindcss": "^3.2.4"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds --public-path=assets",
