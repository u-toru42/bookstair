<form class="p-1 flex justify-center items-center" action="/books/search" method="get" data-controller="autocomplete">
  <%= form_with url: nil, method: :get, data: { controller: "autocomplete" } do |f| %>
    <div class="flex items-center justify-center w-1/2 sm:w-full">
      <label for="Bookname" class="w-full px-3 py-2 rounded focus-within:border-blue-600">
        <%= f.search_field :title_search, value: params[:title_search], placeholder: "検索: 書籍名", class: "w-full p-4 mx-auto text-sm border-sky-400 rounded-lg bg-slate-50 border-2", type: "text", data: { target: "autocomplete.input" } %>
      </label>
      <%= f.submit "検索", class: "submit-button inline-block rounded border border-sky-600 bg-sky-600 px-4 py-2 text-sm font-medium text-white focus:ring active:text-sky-500" do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
    <ul data-autocomplete-target="results"></ul>
  <% end %>
</form>
