<header aria-label="Page Header" class="bg-gray-100">
  <div class="max-w-screen px-4 py-8 mx-auto sm:py-12 sm:px-6 lg:px-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div class="text-center sm:text-left">
        <div class="flex-1 md:flex md:items-center md:gap-12">
          <a class="block text-teal-600" href="/">
            <img><%= image_tag asset_path("bookstair_logo.png"), class: "ml-10 h-12", viewBox: "0 0 28 24", fill: "none" %>
          </a>
        </div>
      </div>

      <div class="flex flex-col gap-4 mt-4 sm:mt-0 sm:flex-row sm:items-center">
        <a class="block text-teal-600 p-5" href="/books/search">
          <img><%= image_tag asset_path("search_button.png"), class: "h-6 ml-5", viewBox: "0 0 28 24", fill: "none" %>
        </a>
        <div class="p-5">
          <a class="block text-teal-600" href="/books/">
            <img><%= image_tag asset_path("auto_book.png"), class: "h-6 ml-5", viewBox: "0 0 28 24", fill: "none" %>
          </a>
        </div>
        <div class="flex flex-col gap-4 mt-4 sm:mt-0 sm:flex-row sm:items-right">
          <button class="text-sm font-medium">
            <%= link_to '新規登録', new_user_registration_path, class: "flex justify-center items-center block rounded-lg bg-green-600 px-5 py-3 text-sm font-medium text-white transition hover:bg-green-700 focus:outline-none focus:ring" %>
          </button>
          <button><%= link_to 'ログイン', new_user_session_path, class:"flex justify-center items-center block rounded-lg bg-green-600 px-5 py-3 text-sm font-medium text-white transition hover:bg-green-700 focus:outline-none focus:ring" %></button>
          <button><%= link_to 'ゲストログインしてみる', users_guest_sign_in_path, data: { turbo_method: :post }, class: "flex justify-center items-center block px-5 py-3 text-sm font-medium text-white transition bg-blue-600 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring" %></button>
        </div>
      </div>
    </div>
  </div>
</header>