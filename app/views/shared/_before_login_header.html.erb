<header class="flex justify-center items-center h-20 p-6 border-y-2">
  <div class="w-full max-w-7xl flex justify-content">
    <div x-data="{ open: false }" class="flex flex-col max-w-screen-xl p-5 mx-auto md:items-center md:justify-center md:flex-row md:px-6 lg:px-8">
      <div class="flex flex-row items-center justify-center lg:justify-start">
        <a href="/" class="text-lg font-bold tracking-tighter text-blue-600 transition duration-500 ease-in-out transform tracking-relaxed lg:pr-8" data-action="sidebar#toggle">
          <%= image_tag asset_path("bookstair_logo.png"), class: "h-12", viewBox: "0 0 28 24", fill: "none" %>
        </a>
      </div>          
      <nav :class="{'flex': open, 'hidden': !open}" class="flex-col items-center flex-grow hidden pb-4 border-blue-600 md:pb-0 md:flex md:justify-end md:flex-row lg:border-l-2 lg:pl-2">
      </nav>
    </div>
  </div>
  <nav>
    <button id="button" type="button" class="fixed z-30 top-6 left-6">
      <i id="sidebar" class="fa-solid fa-sidebar fa-2x"></i> 
      <i id="bars" class="fa-solid fa-bars fa-2x"></i>
      <i id="xmark" class="fa-solid fa-xmark fa-2x invisible"></i>
    </button>
  </nav>
</header>

