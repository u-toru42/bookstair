<% if @books.present? %>
  <% @books&.each do |book| %>
    <div class="book-line">
    <!-- book.item_urlを書籍情報ページに飛ばして、book.item_urlを書籍情報のリンク貼り付けに利用する -->
      <p class="book-image">
        <img><%= link_to (image_tag(book.large_image_url, style: "width: 200px; height: 250px;display: inline-block;")), book.item_url %>
      </p>
      <p class="book-data">
        <%= (book.title).gsub(/(\s|　)+/, ' ').gsub("／", "/").tr('０-９ａ-ｚＡ-Ｚ','0-9a-zA-Z') %>
      </p>
      <p class="book-check">
        <%= form_with model: book, local: true do |f| %>
          <%= f.hidden_field :title, id: 'book_title' %>
          <%= f.hidden_field :author, id: 'book_author' %>
          <%= f.hidden_field :salesDate, id: 'book_sales_date' %>
          <%= f.hidden_field :largeImageUrl, id: 'book_large_image_url' %>
          <%= f.hidden_field :itemUrl, id: 'book_item_url' %>
          <%= button_tag type: "f.submit" do %>
            <i class="btn btn-xs btn-primary">よみたいに追加</i>
          <% end %>
        <% end %>
      </p>
    </div>
  <% end %>
<% end %>