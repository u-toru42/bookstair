<% if @books.present? %>
  <% @books&.each do |book| %>
    <section class="text-gray-600 body-font">
      <div class="container mx-auto">
        <div class="flex flex-wrap justify-center items-center">
          <div class="p-2">
            <div class="h-full bg-slate-50 border-3 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
              <div class="p-2">
                <%= link_to (image_tag(book.large_image_url)), book, method: :get, params: {isbn: book.isbn}, remote: :true, class: "lg:h-48 md:h-36 flex justify-center items-center" %>
              </div>
              <div class="p-3">
                <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">CATEGORY</h2>
                <h1 class="title-font text-lg font-medium text-gray-900"><%= truncate(set_rakuten_book_params(book.title), length: 36) %></h1>
                <p class="leading-relaxed mb-2 text-sm">著者: <%= set_rakuten_book_params(book.author) %></p>
                <div class="flex items-center flex-wrap">
                  <a class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0">注目度
                    <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" data-darkreader-inline-stroke="" style="--darkreader-inline-stroke:currentColor;">
                      <path d="M5 12h14"></path>
                      <path d="M12 5l7 7-7 7"></path>
                    </svg>
                  </a>
                  <span class="text-gray-400 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-200">
                    <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24" data-darkreader-inline-stroke="" style="--darkreader-inline-stroke:currentColor;">
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                      <circle cx="12" cy="12" r="3"></circle>
                    </svg>1.2K
                  </span>
                  <span class="text-gray-400 inline-flex items-center leading-none text-sm">
                    <%= link_to book, method: :get, params: {isbn: book.isbn}, remote: :true, class: "flex items-center" do %>
                      <%= image_tag asset_path("bookmark_icon.png"), class: "h-4 mr-1" %>
                      <span class="text-xs font-medium"><%= @bookmark_counts[book.id] %></span>
                    <% end %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
<% end %>