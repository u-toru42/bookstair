<div class='search'>
  <div id="search-box" class="search-box">
    <%= form_with url: search_books_path, local: true, method: :get do |f| %>
      <%= f.search_field :title_search, value: params[:title_search], placeholder: "書籍名", class: "textarea textarea-bordered", size: 40 %>
      <%= f.search_field :author_search, value: params[:author_search], placeholder: "著者名", class: "textarea textarea-bordered", size: 40 %>
      <button title="検索" type="submit" class="btn btn-accent">検索</button>
    <% end %>
  </div>
  <div id='book_list' class='book_list'>
    <%= render partial: 'book_list' %>
  </div>
</div>
