<div class="max-w-5xl px-4 py-8 mx-auto">
  <section class="p-12 rounded-lg bg-[url('wood.png')] ">
    <div class="grid grid-cols-1 gap-12 sm:grid-cols-3 sm:items-center">
      <%#= image_tag(@book.large_image_url, style: "width: 200px; height: 250px;display: inline-block;", class: "object-cover w-full rounded-lg aspect-square") %>
      <%= link_to (image_tag(@book.large_image_url, style: "width: 200px; height: 250px;display: inline-block;")), @book.item_url, class:"h-56 object-cover" %>

      <blockquote class="sm:col-span-2">
        <h1 class="text-xl font-bold sm:text-2xl">
          <%= link_to set_rakuten_book_params(@book.title), @book, method: :get, params: {isbn: @book.isbn}, remote: :true %>
        </h1>

        <p class="text-md"><%= set_rakuten_book_params(@book.author) %></p>

        <p class="text-lg font-bold"><%= number_to_currency(@book.item_price, format: "%u%n", unit: "￥") %></p>

        <div class="mt-4">
          <div class="prose max-w-none">
            <p>
              <%= simple_format(@book.item_caption) %>
            </p>
          </div>
        </div>
