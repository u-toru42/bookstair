<section class="bg-[url('shelf.jpg')]">
  <div class="max-w-screen-xl px-4 py-8 mx-auto card sm:px-6 sm:py-12 lg:px-8">
    <header>
      <h2 class="text-xl font-bold text-gray-900 sm:text-3xl bg-[url('wood.png')] m-10">
        本棚
      </h2>
    </header>

      <div class="lg:col-span-3 card-body">
        <ul class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        <% if @books.present? %>
          <% @books&.each do |book| %>
          <li>
            <a href="#" class="block overflow-hidden group">
              <!--
              <img
                src="https://images.unsplash.com/photo-1523381210434-271e8be1f52b?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80"
                alt=""
                class="h-[350px] w-full object-cover transition duration-500 group-hover:scale-105 sm:h-[450px]"
              />
              -->
              <div class="bg-[url('wood.png')] p-10">
                <%= image_tag(book.large_image_url) %>
              </div>

              <div class="relative pt-3 bg-white">
                <h3
                  class="text-xs text-gray-700 group-hover:underline group-hover:underline-offset-4"
                >
                  <%= set_rakuten_book_params(book.title) %>
                </h3>

                <p class="mt-2">
                  <span class="text-xs text-gray-700 group-hover:underline group-hover:underline-offset-4"><%= set_rakuten_book_params(book.author) %></span>

                  <span class="tracking-wider text-gray-900"><%= link_to "しおりを見てみる", book, method: :get, params: {isbn: book.isbn}, remote: :true, class: "inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500" %></span>
                </p>
              </div>
            </a>
          </li>
        <% end %>
      <% end %>
        </ul>
      </div>
    </div>
  </div>
</section>
