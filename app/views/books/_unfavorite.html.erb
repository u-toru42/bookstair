<turbo-frame id="favorite-button-<%= book.isbn %>">
  <% favorite = @favorites&.find_by(book_isbn: book.isbn) %>
  <% if favorite %>
    <%= button_to book_favorite_path(book_isbn: book.isbn, id: favorite.id),
                  id: "js-favorite-button-for-book-#{book.isbn}-#{favorite.id}",
                  method: :delete,
                  data: { turbo_method: :delete },
                  local: false,
                  data: { type: :script },
                  class: "flex items-center" do %>
      <span class="text-sm text-blue-600">お気に入りを外す</span>
      <svg class="h-5 w-5"  color="#f87171" data-darkreader-inline-stroke="" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"></path>
      </svg>
    <% end %>
  <% else %>
    <%= button_to book_favorites_path(book_isbn: book.isbn),
                  id: "js-favorite-button-for-book-#{book.isbn}",
                  method: :post,
                  data: { turbo_method: :post },
                  remote: true,
                  data: { type: :script },
                  class: "flex items-center" do %>
      <span class="text-sm text-blue-600">お気に入りに追加しました！</span>
      <svg class="h-5 w-5"  color="#f87171" data-darkreader-inline-stroke="" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"></path>
      </svg>
    <% end %>
  <% end %>
</turbo-frame>
